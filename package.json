    "build": "electron-builder",
    "rebuild": "electron-rebuild"
  },
  "author": "DBKynd",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "grunt": "^1.6.1",
    "grunt-aws-s3": "^2.0.0",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-shell": "^4.0.0",
    "load-grunt-tasks": "^5.1.0"
  },
  "dependencies": {
    "electron-config": "^2.0.2",
    "express": "^4.18.3",
    "jquery": "^3.7.1",
    "keycode": "^2.2.1",
    "launchpadder": "github:controlcast/launchpadder",
    "@nut-tree/nut-js": "^4.2.0",
    "midi": "^2.0.1",
    "moment": "^2.30.1",
    "noty": "^3.2.0-beta",
    "request": "^2.88.2",
    "simpleflakes": "^1.2.3",
    "socket.io": "^4.7.5",
    "superagent": "^8.1.2",
    "underscore": "^1.13.6",
    "usb-detection": "^4.14.2",
    "winston": "^3.13.0",
    "winston-loggly-bulk": "^1.4.2",
    "woopra-tracker": "^1.5.0"
  },
  "build": {
    "appId": "com.controlcast.app",
    "productName": "ControlCast",
    "directories": {
